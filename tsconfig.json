{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/client/**/*.ts",
    "src/client/**/*.d.ts",
    "src/client/**/*.vue"
  ]
}
